# define a bigger scrollback, default is 100 lines
defscrollback 15000

# turn sending of screen messages to hardstatus off
hardstatus off

# An alternative hardstatus to display a bar at the bottom.
hardstatus alwayslastline "%{+b wk}%H%{-b wk} %?%-Lw%?%{bw}%n*%f %t%?(%u)%?%{wk}%?%+Lw%? %-11=%{gk}%c %{yk}%M%d"

# ------------------------------------------------------------------------------
# STARTUP SCREENS
# ------------------------------------------------------------------------------
#         Screen_name   Screen #        Startup command
#screen -t monit         0               top
#screen -t bash          1

startup_message off
